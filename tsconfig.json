{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "preserve",
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2019.array"]
  },
  "include": ["./src/**/*", "./gatsby/**/*"],
  "exclude": ["node_modules"]
}
